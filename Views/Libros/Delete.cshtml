@model BibliotecaNacional.Models.Libro

@{
    ViewData["Title"] = "Eliminar Libro";
}

<div class="container mt-4">
    <h3 class="text-danger">¿Estás seguro de que quieres eliminar este libro?</h3>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Editorial
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Editorial.Nombre)
        </dd>
        </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ISBN" />
        
        <input type="submit" value="Confirmar Eliminación" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>