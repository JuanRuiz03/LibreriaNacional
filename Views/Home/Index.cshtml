@{
    ViewData["Title"] = "Librería Nacional | Menú Principal";
}

<div class="container py-5">
    
    <h1 class="display-4 text-center mb-5 text-primary">
        Gestión de Inventario
    </h1>
    
    <div class="row justify-content-center">
        
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body text-center p-5">
                    
                    <i class="bi bi-book display-1 text-info mb-3"></i>
                    <h2 class="card-title text-info mb-4">Crear Libros</h2>
                    
                    <a asp-controller="Libros" asp-action="Index" class="btn btn-info btn-lg mt-3 w-75">
                        Ir a Libros
                    </a>
                    
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-lg h-100 border-0">
                <div class="card-body text-center p-5">
                    
                    <i class="bi bi-building display-1 text-secondary mb-3"></i>
                    <h2 class="card-title text-secondary mb-4">Crear Editoriales</h2>
                    
                    <a asp-controller="Editoriales" asp-action="Index" class="btn btn-secondary btn-lg mt-3 w-75">
                        Ir a Editoriales
                    </a>
                    
                </div>
            </div>
        </div>

    </div>
    
</div>